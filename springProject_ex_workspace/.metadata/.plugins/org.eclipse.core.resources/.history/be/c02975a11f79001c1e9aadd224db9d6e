package com.boot.backendMiniProject.post;

import java.util.ArrayList;
import java.util.HashMap;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Service;



@Service
public class PostService implements IPostService {
	// MyBatis  ?Ç¨?ö©?ïò?äî Í≤ΩÏö∞?ùò DI ?Ñ§?†ï
	@Autowired
	@Qualifier("IProductDAO")
	IPostDAO dao;

	@Override
	public ArrayList<PostVO> listAllProduct() {		
		return dao.listAllProduct();
	}

	@Override
	public void insertProduct(PostVO prdVo) {
		dao.insertProduct(prdVo);
	}

	@Override
	public void updateProduct(PostVO prdVo) {
		dao.updateProduct(prdVo);
	}

	@Override
	public void deleteProduct(String prdNo) {
		dao.deleteProduct(prdNo);
	}

	@Override
	public PostVO detailViewProduct(String prdNo) {		
		return dao.detailViewProduct(prdNo);
	}
	
	@Override
	public String prdNoCheck(String prdNo) {
		return dao.prdNoCheck(prdNo);
	}

	@Override
	public ArrayList<PostVO> productSearch(HashMap<String, Object> map){
		return dao.productSearch(map);
	}
}
